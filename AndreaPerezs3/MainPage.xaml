<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndreaPerezs3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#330099" Padding="15" CornerRadius="0">
            <Label Text="Bienvenido al sistema, Ingresa tus Datos" HorizontalTextAlignment="Center" TextColor="White" FontSize="23"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="Ingrese la contrasena" IsPassword="True"/>

        <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"/>

        

    </StackLayout>

</ContentPage>
